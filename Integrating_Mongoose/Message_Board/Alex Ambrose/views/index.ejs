<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Board</title>
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <form class="" action="/post_message" method="post">
            Name: <br><input type="text" name="name" value=""><br>
            Message: <br><input type="textarea" name="message" cols = "80" rows = "10" value=""><br>
            <input type="submit" name="subBtn" value="Post message">
        </form>
        <% for(var i = 0;i<messages.length;i++) { %>
            <%= messages[i].name %> <br>
            <%= messages[i].message %> <br>
            <% for(var k = 0;k<messages[i].comments.length;k++) { %>
                <%= messages[i].comments[k].name %> <br>
                <%= messages[i].comments[k].comment %> <br>
            <% } %>
            <form class="" action="post_comment" method="post">
                Name: <br><input type="text" name="commentName" value=""><br>
                Comment: <br><input type="textarea" name="comment" cols = "80" rows = "10" value=""><br>
                <input type="hidden" name="message_id" value='<%= messages[i].id %>'>
                <input type="submit" name="subBtn" value="Post comment">
            </form>
        <% } %>
    </body>
</html>
