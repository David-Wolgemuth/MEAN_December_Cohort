<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
      .posts_comments{
        margin-left: 60px;
      }
      .comments{
        margin-left: 40px;
      }
    </style>
  </head>
  <body>
    <h1>Modularized Message Board</h1>
    <form class="" action="/posts" method="post">
      <p>Name: <input type="text" name="name" value=""></p>
      <p>Message: <input type="text" name="text" value=""></p>
      <input type="submit">
    </form>
    <% if(posts) { console.log(posts) %>
      <div class="posts_comments">
        <% for(var x=0;x<posts.length;x++){ %>
          <p><%= posts[x].name %></p>
          <p><%= posts[x].text %></p>
          <div class="comments">
            <form class="" action="/comments/<%= posts[x].id %>" method="post">
              <% for (var y=0;y<posts[x]._comments.length;y++) { %>
    						<h5><%="Name: " + posts[x]._comments[y].name %></h5>
    						<h5><%="Comment: " + posts[x]._comments[y].text %></h5>
    					<% } %>
              <p>Name: <input type="text" name="name" value=""></p>
              <p>Comment: <input type="text" name="text" value=""></p>
              <input type="submit">
            </form>
          </div>
        <% } %>
      </div>
    <% } %>
  </body>
</html>
